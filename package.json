{
  "name": "ethereum-todo-list",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "tsc-node": "tsc -p tsconfig.json",
    "lint:js": "eslint src --ext .ts --ext .tsx --fix",
    "lint": "npm run tsc-node && npm run lint:js",
    "check-updates": "ncu -u",
    "check-updates-minor": "ncu -u -t minor"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc-node && lint-staged"
    }
  },
  "lint-staged": {
    "{**/*,*}.{json,css,md}": [
      "prettier --write"
    ],
    "{**/*,*}.{ts,tsx,js,jsx}": [
      "eslint .eslintrc.js --fix --max-warnings=-1",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@chakra-ui/react": "^1.6.5",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@walletconnect/web3-provider": "^1.4.1",
    "framer-motion": "^4.1.17",
    "next": "11.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "web3": "^1.4.0",
    "web3modal": "^1.9.3"
  },
  "devDependencies": {
    "@types/node": "^16.4.1",
    "@types/react": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "7.31.0",
    "eslint-config-next": "11.0.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.1.0",
    "npm-check-updates": "^11.8.3",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  }
}
